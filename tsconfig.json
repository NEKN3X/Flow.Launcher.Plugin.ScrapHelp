/* https://aka.ms/tsconfig */
{
	"compilerOptions": {
		"baseUrl": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "node16",
		"moduleResolution": "node16",
		"outDir": "./dist",
		"paths": {
			"@core/*": [
				"core/*"
			],
			"@shell/*": [
				"shell/*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "es2016",
		"types": [
			"vitest/globals"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
